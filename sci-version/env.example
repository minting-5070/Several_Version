# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Example: OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Optional: Supabase for server-side chat logging (full question/answer storage)
# Create a Supabase project and a table `chat_logs` with the following columns:
# - log_id: uuid (primary key)
# - prolific_id: text
# - session_id: text
# - app_version: text
# - question_text: text
# - question_length: int8
# - answer_text: text
# - answer_length: int8
# - ts_start: timestamptz
# - ts_end: timestamptz
# Enable RLS and add a policy for inserts/updates using service role, or disable RLS.
# Provide the REST URL and a Service Role key below.
SUPABASE_URL=https://YOUR_PROJECT_ID.supabase.co
SUPABASE_SERVICE_ROLE=YOUR_SUPABASE_SERVICE_ROLE_KEY